<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog stretch="true">
        <content>
            <VBox
                fitContainer="true"
                class="sapUiMediumMargin"
            >
                <Title text="{i18n>Report}" />
                <TextArea
                    rows="50"
                    width="100%"
                />
            </VBox>
        </content>
        <beginButton>
            <Button text="{i18n>Save}" />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>Close}"
                press="onPressClose"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
