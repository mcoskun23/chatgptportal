<mvc:View
    controllerName="com.ntt.chatgptportal.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:l="sap.ui.layout"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz="sap.viz.ui5.controls"
>
    <f:DynamicPage title="{i18n>title}">
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search=".onSearch"
                        filterChange=".onFilterChange"
                        afterVariantLoad=".onAfterVariantLoad"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="Name"
                                label="Name"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="Name"
                                        selectionChange=".onSelectionChange"
                                    >
                                        <core:Item
                                            key="{key}"
                                            text="{name}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="Category"
                                label="Category"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="Category"
                                        selectionChange=".onSelectionChange"
                                    >
                                        <core:Item
                                            key="{key}"
                                            text="{name}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="SupplierName"
                                label="SupplierName"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="SupplierName"
                                        selectionChange=".onSelectionChange"
                                    >
                                        <core:Item
                                            key="{key}"
                                            text="{name}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <l:BlockLayout id="blockLayout">
                <l:BlockLayoutRow class="sapUiLargeMarginBegin">
                    <l:BlockLayoutCell class="customCellImageBackground" />

                    <l:BlockLayoutCell title="Apps">
                        <GenericTile
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                            header="{i18n>FsToAbap}"
                            press="onPressFsToAbap"
                        >
                            <TileContent>
                                <ImageContent src="sap-icon://source-code" />
                            </TileContent>
                        </GenericTile>

                        <GenericTile
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                            header="{i18n>AbapToFs}"
                            press="onPressAbapToFs"
                        >
                            <TileContent>
                                <ImageContent
                                    src="sap-icon://excel-attachment"
                                />
                            </TileContent>
                        </GenericTile>
                    </l:BlockLayoutCell>
                </l:BlockLayoutRow>
                <l:BlockLayoutRow>
                    <l:BlockLayoutCell>
                        <f:Card>
                            <f:content>
                                <viz:VizFrame
                                    uiConfig="{applicationSet:'fiori'}"
                                    vizType='donut'
                                >
                                    <viz:dataset>
                                        <viz.data:FlattenedDataset
                                            data="{vizModel>/milk}"
                                        >
                                            <viz.data:dimensions>
                                                <viz.data:DimensionDefinition
                                                    name="StoreName"
                                                    value="{vizModel>StoreName}"
                                                />
                                            </viz.data:dimensions>
                                            <viz.data:measures>
                                                <viz.data:MeasureDefinition
                                                    name="Revenue"
                                                    value="{vizModel>Revenue}"
                                                />
                                            </viz.data:measures>
                                        </viz.data:FlattenedDataset>
                                    </viz:dataset>

                                    <viz:feeds>
                                        <viz.feeds:FeedItem
                                            uid="size"
                                            type="Measure"
                                            values="Revenue"
                                        />
                                        <viz.feeds:FeedItem
                                            uid="color"
                                            type="Dimension"
                                            values="StoreName"
                                        />
                                    </viz:feeds>
                                    <viz:dependents>
                                        <viz:Popover id="idPopOver" />
                                    </viz:dependents>
                                </viz:VizFrame>
                            </f:content>
                        </f:Card>
                    </l:BlockLayoutCell>
                    <l:BlockLayoutCell>
                        <f:Card>
                            <f:content>
                                <viz:VizFrame
                                    uiConfig="{applicationSet:'fiori'}"
                                    vizType='column'
                                >
                                    <viz:dataset>
                                        <viz.data:FlattenedDataset
                                            data="{vizModel>/milk}"
                                        >
                                            <viz.data:dimensions>
                                                <viz.data:DimensionDefinition
                                                    name="StoreName"
                                                    value="{vizModel>StoreName}"
                                                />
                                            </viz.data:dimensions>
                                            <viz.data:measures>
                                                <viz.data:MeasureDefinition
                                                    name="Revenue"
                                                    value="{vizModel>Revenue}"
                                                />
                                                <viz.data:MeasureDefinition
                                                    name="Cost"
                                                    value="{vizModel>Cost}"
                                                />
                                            </viz.data:measures>
                                        </viz.data:FlattenedDataset>
                                    </viz:dataset>

                                    <viz:feeds>
                                        <viz.feeds:FeedItem
                                            uid="valueAxis"
                                            type="Measure"
                                            values="Revenue"
                                        />
                                        <viz.feeds:FeedItem
                                            uid="valueAxis"
                                            type="Measure"
                                            values="Cost"
                                        />
                                        <viz.feeds:FeedItem
                                            uid="color"
                                            type="Dimension"
                                            values="StoreName"
                                        />
                                    </viz:feeds>
                                </viz:VizFrame>
                            </f:content>
                        </f:Card>
                    </l:BlockLayoutCell>
                    <l:BlockLayoutCell>
                        <f:Card>
                            <f:content>
                                <viz:VizFrame
                                    uiConfig="{applicationSet:'fiori'}"
                                    vizType='area'
                                >
                                    <viz:dataset>
                                        <viz.data:FlattenedDataset
                                            data="{vizModel>/milk}"
                                        >
                                            <viz.data:dimensions>
                                                <viz.data:DimensionDefinition
                                                    name="StoreName"
                                                    value="{vizModel>StoreName}"
                                                />
                                            </viz.data:dimensions>
                                            <viz.data:measures>
                                                <viz.data:MeasureDefinition
                                                    name="Revenue"
                                                    value="{vizModel>Revenue}"
                                                />
                                                <viz.data:MeasureDefinition
                                                    name="Cost"
                                                    value="{vizModel>Cost}"
                                                />
                                            </viz.data:measures>
                                        </viz.data:FlattenedDataset>
                                    </viz:dataset>

                                    <viz:feeds>
                                        <viz.feeds:FeedItem
                                            uid="valueAxis"
                                            type="Measure"
                                            values="Revenue"
                                        />
                                        <viz.feeds:FeedItem
                                            uid="valueAxis"
                                            type="Measure"
                                            values="Cost"
                                        />
                                        <viz.feeds:FeedItem
                                            id='categoryAxisFeed'
                                            uid="categoryAxis"
                                            type="Dimension"
                                            values="StoreName"
                                        />
                                    </viz:feeds>
                                </viz:VizFrame>
                            </f:content>
                        </f:Card>
                    </l:BlockLayoutCell>
                    <l:BlockLayoutCell>
                        <VBox>
                            <SlideTile>
                                <tiles>
                                    <GenericTile
                                        backgroundImage="https://nttdata-solutions.com/wp-content/usermedia/ere.png"
                                        frameType="TwoByOne"
                                        press="window.open('https://nttdata-solutions.com/tr/press-centre/local-press-releases/podcast-pods-of-business/')"
                                    >
                                        <TileContent footer="11/01/2024">
                                            <NewsContent
                                                contentText="🎙️Pods of Business Podcast Serimiz Yayında!"
                                            />
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile
                                        backgroundImage="https://nttdata-solutions.com/wp-content/usermedia/Bahri-Danis-Altin-Lider-Odulu.jpg"
                                        frameType="TwoByOne"
                                        press="window.open('https://nttdata-solutions.com/tr/press-centre/local-press-releases/ceomuz-dr-bahri-danis-bu-sene-de-turkiyenin-en-begenilen-50-ceosundan-biri-oldu/')"
                                    >
                                        <TileContent footer="27/12/2023">
                                            <NewsContent
                                                contentText="CEO’muz Dr. Bahri Danış, Bu Sene de Türkiye’nin En Beğenilen 50 CEO’sundan Biri Oldu!"
                                            />
                                        </TileContent>
                                    </GenericTile>
                                </tiles>
                            </SlideTile>
                            <GenericTile
                                class="sapUiTinyMarginTop tileLayout"
                                size="L"
                                header="Country-Specific Profit Margin"
                                subheader="Expenses"
                                press="press"
                                mode="ArticleMode"
                            >
                                <TileContent
                                    unit="EUR"
                                    footer="Current Quarter"
                                >
                                    <NumericContent
                                        scale="M"
                                        value="1.96"
                                        valueColor="Error"
                                        indicator="Up"
                                        withMargin="false"
                                    />
                                </TileContent>
                            </GenericTile>
                        </VBox>
                    </l:BlockLayoutCell>
                </l:BlockLayoutRow>
            </l:BlockLayout>
        </f:content>
    </f:DynamicPage>
</mvc:View>
