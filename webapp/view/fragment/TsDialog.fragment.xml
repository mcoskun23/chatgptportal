<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        stretch="true"
        title="{i18n>TS}"
        icon="sap-icon://vds-file"
    >
        <content>
            <core:Fragment
                fragmentName="com.ntt.chatgptportal.view.fragment.DialogContent"
                type="XML"
            />
        </content>
        <buttons>
            <Button
                text="{i18n>Regenerate}"
                type="Emphasized"
                icon="sap-icon://synchronize"
                press="onPressRegenerate('')"
            />
            <Button
                text="{i18n>Feedback}"
                type="Emphasized"
                icon="sap-icon://feedback"
                press="onPressFeedback('')"
            />
            <Button
                text="{i18n>GenerateTS}"
                press="onPressCreate(true)"
                type="Emphasized"
            />
            <Button
                text="{i18n>Save}"
                type="Accept"
                press="onPressUpdate(true)"
            />
            <Button
                text="{i18n>Close}"
                press="onPressClose"
                type="Reject"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
