<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        stretch="true"
        title="{i18n>Abap}"
        icon="sap-icon://source-code"
    >
        <content>
            <core:Fragment
                fragmentName="com.ntt.chatgptportal.view.fragment.AbapContent"
                type="XML"
            />
        </content>
        <buttons>
           <Button
                text="{i18n>Regenerate}"
                type="Emphasized"
                icon="sap-icon://synchronize"
                press="onPressRegenerate('02')"
            />
            <Button
                text="{i18n>Feedback}"
                type="Emphasized"
                icon="sap-icon://feedback"
                press="onPressFeedback('02')"
            />
            <Button
                text="{i18n>GenerateAbap}"
                press="onPressCreate(false)"
                type="Emphasized"
            />
            <!-- <Button
                text="{i18n>Save}"
                type="Accept"
                press="onPressUpdate(false)"
            /> -->
            <Button
                text="{i18n>Close}"
                press="onPressClose"
                type="Reject"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
