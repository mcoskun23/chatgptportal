<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Table
        headerText="{i18n>Documents}"
        id="docTable"
        items="{ path: ''}"
        class="sapUiMediumMarginBegin"
        width="95%"
    >
        <columns>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Docno}" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Ernam}" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Date}" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Download}" />
            </Column>
            <Column hAlign="End" />
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <ObjectIdentifier title="{Docno}" />
                    <ObjectIdentifier title="{Ernam}" />
                    <ObjectIdentifier
                        title="{ path: 'Erdat', formatter: '.formatter.formatDate'}"
                        text="{ path: 'Erzeit', formatter: '.formatter.formatTime'}"
                    />
                    <Link
                        text="{i18n>Download}"
                        press="onPressDownload"
                    />
                    <Button
                        icon="sap-icon://display"
                        press="onPressDoc"
                        type="Emphasized"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <VBox
        fitContainer="true"
        class="sapUiMediumMargin"
    >
        <Title text="{i18n>Report}" />
        <TextArea
            id="report"
            width="100%"
            growing="true"
        />
    </VBox>
</core:FragmentDefinition>
