<mvc:View
    controllerName="com.ntt.chatgptportal.controller.Create"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        title="{i18n>title}"
        showFooter="true"
        fitContent="true"
    >
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <core:Fragment
                        fragmentName="com.ntt.chatgptportal.view.fragment.FilterBar"
                        type="XML"
                    />
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <core:Fragment
                fragmentName="com.ntt.chatgptportal.view.fragment.Wizard"
                type="XML"
            />
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="{i18n>Save}"
                    type="Accept"
                    icon="sap-icon://save"
                />
                <Button
                    text="{i18n>TS}"
                    icon="sap-icon://vds-file"
                />
                <Button
                    text="{i18n>Abap}"
                    icon="sap-icon://source-code"
                />
                <Button
                    text="{i18n>Feedback}"
                    type="Emphasized"
                    icon="sap-icon://feedback"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
