<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
>
    <WizardStep
        title="{i18n>SelectionScreen}"
        icon="sap-icon://activity-items"
    >
        <Table items="{model>/Params}">
            <headerToolbar>
                <OverflowToolbar>
                    <ToolbarSpacer />
                    <Button
                        text="{i18n>AddRow}"
                        icon="sap-icon://sys-add"
                        press="onPressAddParam"
                    />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="{i18n>Parameter}" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="{i18n>Required}" />
                </Column>
                <Column hAlign="End" />
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Input value="{model>Param}" />
                        <Select selectedKey="{model>Type}">
                            <core:Item
                                key="01"
                                text="Opsiyonel"
                            />
                            <core:Item
                                key="01"
                                text="Zorunluluk"
                            />
                        </Select>
                        <Button
                            icon="sap-icon://delete"
                            press="onPressDeleteParam"
                            type="Reject"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </WizardStep>
</core:FragmentDefinition>
