<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
>
    <WizardStep
        id="step1"
        nextStep="step2"
        title="{i18n>Development}"
        icon="sap-icon://hint"
        complete="onPressStep2"
        validated="false"   
    >
        <form:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
        >
            <form:content>
                <Label text="{i18n>Devreason}" />
                <TextArea
                    growing="true"
                    value="{model>/Devreason}"
                />
                <Label text="{i18n>Reportheader}" />
                <Input value="{model>/Reportheader}" />
                <Label text="{i18n>Devtype}" />
                <Input value="{model>/Devtype}" />
                <Label text="{i18n>Devmodule}" />
                <Input value="{model>/Devmodule}" />
                <Label text="{i18n>Devpurpose}" />
                <TextArea
                    growing="true"
                    value="{model>/Devpurpose}"
                />
                <Label text="{i18n>Authobj}" />
                <TextArea value="{model>/Authobj}" />
                <Label text="{i18n>Devprocedure}" />
                <TextArea
                    growing="true"
                    value="{model>/Devprocedure}"
                />
            </form:content>
        </form:SimpleForm>
    </WizardStep>
</core:FragmentDefinition>
