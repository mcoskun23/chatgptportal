<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        stretch="true"
        title="{i18n>Loading}"
        horizontalScrolling="false"
        verticalScrolling="false"
    >
        <content>
            <VBox
                alignItems="Center"
                alignContent="Stretch"
            >
                <Title
                    id="text"
                    text="{i18n>BusyText}"
                    wrapping="true"
                    class="customText sapUiLargeMargin"
                />
                <Image
                    height="27rem"
                    width="27rem"
                    id="image"
                    class="sapUiMediumMarginBottom"
                />
            </VBox>
        </content>
        <endButton>
            <Button
                text="{i18n>Close}"
                press="closeBusyDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
