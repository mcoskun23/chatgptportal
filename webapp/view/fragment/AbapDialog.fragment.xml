<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        stretch="true"
        title="{i18n>Abap}"
        icon="sap-icon://source-code"
    >
        <content>
            <core:Fragment
                fragmentName="com.ntt.chatgptportal.view.fragment.DialogContent"
                type="XML"
            />
        </content>
        <buttons>
            <Button
                text="{i18n>GenerateAbap}"
                press="onPressCreate('02')"
                type="Emphasized"
            />
            <Button
                text="{i18n>Save}"
                type="Accept"
                press="onPressUpdate('02')"
            />
            <Button
                text="{i18n>Close}"
                press="onPressClose"
                type="Reject"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
