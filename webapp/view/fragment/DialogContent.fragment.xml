<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Table
        headerText="{i18n>Documents}"
        id="docTable"
        items="{ path: ''}"
        growing="true"
    >
        <columns>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Docno}" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Ernam}" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Date}" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Download}" />
            </Column>
            <Column hAlign="End" />
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <ObjectIdentifier title="{Docno}" />
                    <ObjectIdentifier title="{Ernam}" />
                    <ObjectIdentifier
                        title="{ path: 'Erdat', formatter: '.formatter.formatDate'}"
                        text="{ path: 'Erzeit', formatter: '.formatter.formatTime'}"
                    />
                    <Link
                        text="{i18n>Download}"
                        press="onPressDownload"
                    />
                    <Button
                        icon="sap-icon://display"
                        press="onPressDoc"
                        type="Emphasized"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <OverflowToolbar
        id="toolbar"
        visible="{= ${viewModel>/report}}"
        class="sapUiMediumMarginTop"
    >
        <Title
            text="{i18n>Report}"
            titleStyle="H4"
            class="sapUiMediumMarginBottom sapUiMediumMarginTop sapUiTinyMarginBegin"
        />
        <ToolbarSpacer />
        <Button
            visible="{= ${viewModel>/edit}}"
            text="{i18n>Save}"
            type="Accept"
            press="onPressUpdate()"
        />
        <Button
            visible="{= !${viewModel>/edit}}"
            icon="sap-icon://edit"
            text="{i18n>Edit}"
            type="Emphasized"
            press="onPressEdit(true)"
        />
        <Button
            visible="{= ${viewModel>/edit}}"
            icon="sap-icon://decline"
            text="{i18n>Close}"
            type="Reject"
            press="onPressEdit(false)"
        />
        <Button
            visible="{= !${viewModel>/edit}}"
            icon="sap-icon://copy"
            text="{i18n>Copy}"
            press="onPressCopy"
        />
    </OverflowToolbar>

    <TextArea
        id="txtForm"
        visible="{= ${viewModel>/report} &amp;&amp; !${viewModel>/edit} }"
        class="sapUiMediumMargin"
        growing="true"
        editable="false"
        growingMaxLines="1000000"
    />
